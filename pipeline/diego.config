input {
  file {
    path => "/support/logs/diego/*"
    start_position => "beginning"
  }
}

filter {
  if [path] =~ "auctioneer" or [path] =~ "cc_uploader" or [path] =~ "file_server" or [path] =~ "service-discovery-controller" or [path] =~ "watcher" {
    mutate { 
      replace => { "type" => "diego" } 
      convert => { 
        "data.duration" => "string" 
        "data.status" => "string"
        "timestamp" => "string"
      }
    }
    json {
    source =>"message"
    }
    date {
      match => [ "timestamp" , "yyyy-MM-dd'T'HH:mm:ss.SSSSSSSSS'Z'" ]
      target => "@timestamp"
    }
  }  
}

output {
  elasticsearch {
    hosts => ["my.es.local:9200"]
  }
  stdout { codec => rubydebug }
}

